<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/createBackupDbBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Backup Db File"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ZipBackupBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zip Backup"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createBackupDbBtn" />

    <Button
        android:id="@+id/select_zip_from_drive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Zip from Drive for backup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_zip_to_drive" />

    <Button
        android:id="@+id/upload_zip_to_drive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Zip to Drive"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ZipBackupBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>